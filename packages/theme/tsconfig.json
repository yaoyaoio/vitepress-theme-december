{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "."
  ]
}

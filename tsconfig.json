{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "jsx": "preserve",
    "module": "ESNext",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "**/.vuepress/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    ".temp",
    "lib",
    "dist"
  ]
}
